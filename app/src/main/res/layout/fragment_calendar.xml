    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.lindycoder.glenn.rentapp.EventCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

