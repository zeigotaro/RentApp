<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dip"
    android:paddingBottom="5dip">


    <!-- item preview image -->
    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/hotbuy_img_preview"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true" />

    <!-- List arrow -->
    <ImageView android:id="@+id/list_arrow"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:paddingTop="9dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:src="@drawable/button_redarrow"
        android:layout_alignParentRight ="true" />

    <!-- Item Title -->
    <TextView
        android:id="@+id/hotbuy_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dip"
        android:paddingLeft="8dip"
        android:paddingBottom="2dip"
        android:textSize="15dip"
        android:textStyle="bold"
        android:textColor="#0147FA"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/list_arrow"
        android:layout_toRightOf="@id/hotbuy_img_preview" />

    <!-- Item Category -->
    <TextView android:id="@+id/hotbuy_item_category"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="8dip"
        android:paddingTop="2dip"
        android:textSize="13dip"
        android:layout_toRightOf="@id/hotbuy_img_preview"
        android:layout_below="@id/hotbuy_item_title"/>

    <!-- Separator -->
    <TextView android:id="@+id/text_bar_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingBottom="2dip"
        android:textSize="15dip"
        android:text="|"
        android:layout_toRightOf="@id/hotbuy_item_category"
        android:layout_below="@id/hotbuy_item_title"/>

    <!-- Item Quantity -->
    <TextView android:id="@+id/hotbuy_item_quantity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingTop="2dip"
        android:textSize="13dip"
        android:layout_toRightOf="@id/text_bar_1"
        android:layout_below="@id/hotbuy_item_title"/>

    <!-- Separator -->
    <TextView android:id="@+id/text_bar_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingBottom="2dip"
        android:textSize="15dip"
        android:text="|"
        android:layout_toRightOf="@id/hotbuy_item_quantity"
        android:layout_below="@id/hotbuy_item_title"/>

    <!-- Item Price -->
    <TextView android:id="@+id/hotbuy_item_price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="4dip"
        android:paddingTop="2dip"
        android:textSize="13dip"
        android:layout_toRightOf="@id/text_bar_2"
        android:layout_toLeftOf="@id/list_arrow"
        android:layout_below="@id/hotbuy_item_title" />

</RelativeLayout>